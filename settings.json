{
  "env": {
    "EDITOR": "cursor --wait"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "defaultMode": "dontAsk",
    "deny": ["Task(Explore)"]
  },
  "model": "claude-opus-4-6",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/hooks/session-start.sh\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/hooks/session-end.sh\"",
            "timeout": 3600,
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash \"$HOME/.claude/scripts/statusline.sh\""
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "playwright@claude-plugins-official": true
  }
}
